{
  "name": "vararu.org",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "eslint": "eslint '*.js' 'pages/**/*.js' 'components/**/*.js'",
    "flow-coverage": "flow-coverage-report -i 'pages/**/*.js' -i 'components/**/*.js' -t html -o coverage/flow-coverage-report",
    "flow": "flow",
    "lint-staged": "lint-staged",
    "lint": "run-p eslint 'flow -- check'",
    "precommit": "npm run lint-staged",
    "prettier-eslint": "prettier-eslint --write 'pages/**/*.js' 'components/**/*.js'",
    "start": "next start --port=$PORT",
    "test": "npm run lint"
  },
  "dependencies": {
    "babel-preset-flow": "^6.23.0",
    "next": "^2.1.1",
    "next-redirect": "^1.0.1",
    "raf-throttle": "^2.0.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-motion": "^0.4.8"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "^0.44.2",
    "flow-coverage-report": "^0.3.0",
    "husky": "^0.13.3",
    "lint-staged": "^3.4.0",
    "npm-run-all": "^4.0.2",
    "prettier-eslint-cli": "^3.4.2",
    "webpack-visualizer-plugin": "^0.1.11"
  },
  "lint-staged": {
    "linters": {
      "**/*.js": [
        "prettier-eslint --write"
      ]
    }
  }
}
