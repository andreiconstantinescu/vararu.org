{
  "name": "vararu.org",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "format": "prettier-standard 'pages/**/*.js' 'components/**/*.js'",
    "lint-staged": "lint-staged",
    "precommit": "npm run lint-staged",
    "start": "next start --port=$PORT"
  },
  "dependencies": {
    "next": "^2.1.1",
    "raf-throttle": "^2.0.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "devDependencies": {
    "husky": "^0.13.3",
    "lint-staged": "^3.4.0",
    "prettier-standard": "^4.1.0"
  },
  "lint-staged": {
    "linters": {
      "pages/**/*.js": [
        "prettier-standard",
        "git add"
      ],
      "components/**/*.js": [
        "prettier-standard",
        "git add"
      ]
    }
  }
}
